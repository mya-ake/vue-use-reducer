{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["jest"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@fixtures/*": ["tests/fixtures/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "examples"]
}
